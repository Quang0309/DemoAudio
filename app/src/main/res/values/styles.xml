<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="AudioRecordView">

        <attr name="chunkWidth" format="dimension" />
        <attr name="chunkMaxHeight" format="dimension" />
        <attr name="chunkMinHeight" format="dimension" />
        <attr name="chunkSpace" format="dimension" />
        <attr name="chunkColor" format="color" />

    </declare-styleable>

</resources>